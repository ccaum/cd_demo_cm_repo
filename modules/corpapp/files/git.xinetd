# default: off
# description: The git d√¶mon allows git repositories to be exported using \
#       the git:// protocol.

#git daemon --reuseaddr --export-all /opt/puppet
service git
{
        disable         = no
        socket_type     = stream
        wait            = no
        user            = nobody
        server          = /usr/bin/git
        server_args     = daemon --inetd --reuseaddr --export-all /opt/puppet
        log_on_failure  += USERID
}
